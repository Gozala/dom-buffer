{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "flatbuffers": ["@types/flatbuffers"]
    },
    "target": "es2015",
    "declaration": true,
    "inlineSourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "outDir": "./",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2016",
      "dom"
    ]
  }
}